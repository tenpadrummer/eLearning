<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h1 class="section-heading text-uppercase">Contact</h1>
      </div>
    </div>
  <div class="row">
  <div class="col-lg-12">
    <form id="contact-form" name="sentMessage" novalidate="novalidate">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <p class="help-block text-light">Name</p>
            <input class="form-control" id="name" type="text" required="required" data-validation-required-message="Please enter your name.">
          </div>
          <div class="form-group">
            <p class="help-block text-light">Email</p>
            <input class="form-control" id="email" type="email" required="required" data-validation-required-message="Please enter your email address.">
          </div>
          <div class="form-group">
            <p class="help-block text-light">Phone number</p>
            <input class="form-control" id="phone" type="tel" required="required" data-validation-required-message="Please enter your phone number.">
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <p class="help-block text-light">Message</p>
            <textarea class="form-control" id="message" required="required" data-validation-required-message="Please enter a message."></textarea>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-lg-12 text-center pt-3">
          <div id="success"></div>
          <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>
</section>

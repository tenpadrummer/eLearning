<div class="container pt-5">
  <div class="row">
    <div class="col-lg-10 offset-1 mx-auto mt-5">
      <div class="card">
        <div class="card-header float-center">
          <h3>Admin | Words</h3>
          <%= link_to "Add word",new_admin_category_word_path, class: "btn btn-info" %>
        </div>
        <div class="card-body">
          <table class="table table-striped table-bordered text-center">
            <thead>
              <tr>
                <th><h6>Words</h6></th>
                <th><h6>Answer</h6></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @words.each do |word| %>
                <tr>
                  <td><%= word.content %></td>
                  <td><%= word.choices.find_by(correct: true).content %></td>
                  <td>
                    <%= link_to 'Edit', edit_admin_category_word_path(id: word), class: "mr-2"%>
                    <%= link_to 'Delete', admin_category_word_path(id: word), method: :delete, data: { confirm: 'You sure?' } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
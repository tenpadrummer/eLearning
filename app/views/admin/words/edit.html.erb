<div class="container pt-5">
  <div class="row">
    <div class= "col-lg-6 offset-3 mx-auto">
      <h1 class="text-center m-5">Edit Words</h1>
      <hr />
      <div class="row">
        <div class="col-lg-12">
          <div class="card card-body">
            <%= form_for ([:admin, :category, @word]) do |f|%>
              <%= render "shared/error_messages", object: f.object %>
              <div class="form-group">
                <%= f.label :content, "Words" %>
                <%= f.text_field :content, class: "form-control" %>
              </div>
              <%= f.fields_for :choices do |c|%>
                <%= render "shared/error_messages", object: c.object %>
                <div class="form-group form-inline mr-2">
                  <%= c.label :content, "Choices" %>
                  <%= c.text_field :content, class: " ml-2 mr-2" %><br />
                  <%= c.check_box :correct, calss: " ml-2 mr-2" %>
                </div>
              <% end %>
              <div class="text-center">
                <%= f.submit "Edit", class: "btn btn-primary" %>
                <%= link_to "Back", admin_category_words_path, class: "btn btn-link" %>
              </div>
            <% end %>
          </div>
          <br />
        </div>
      </div>
    </div>
  </div>
</div>
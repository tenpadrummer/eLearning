<div class="container pt-5">
  <div class="row">
    <div class="col-lg-10 offset-1 mx-auto mt-5">
      <div class="card">
        <div class="card-header float-center">
          <h3>Admin | Categories</h3>
          <%= link_to "Add category", new_admin_category_path, class: "btn btn-info" %>
        </div>
        <div class="card-body">
          <table class="table table-striped table-bordered text-center">
            <thead>
              <tr>
                <th><h6>Title</h6></th>
                <th><h6>Description</h6></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= category.title %></td>
                  <td><%= category.description %></td>
                  <td>
                    <%= link_to 'Show words',admin_category_words_path(category), class: "mr-2"%>
                    <%= link_to 'Add word', new_admin_category_word_path(category), class: "mr-2"%>
                    <%= link_to 'Edit', edit_admin_category_path(category), class: "mr-2"%>
                    <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'You sure?' } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
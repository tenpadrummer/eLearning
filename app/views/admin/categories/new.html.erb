<div class="container pt-5">
  <div class="row">
    <div class= "col-lg-6 offset-3 mx-auto">
      <h1 class="text-center m-5">Category Registration</h1>
      <hr />
      <div class="row">
        <div class="col-lg-12">
          <div class="card card-body">
            <%= form_for :category, url: admin_categories_path do |f|%>
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class: "form-control" %>
              </div>
              <div class="text-center">
                <%= f.submit "Register", class: "btn btn-success" %>
                <%= link_to "Back", admin_categories_path, class: "btn btn-link" %>
              </div>
            <% end %>
          </div>
          <br />
        </div>
      </div>
    </div>
  </div>
</div>
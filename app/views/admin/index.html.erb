<div class="container pt-5">
  <div class="row">
    <div class="col-lg-10 offset-1 mx-auto">
      <div class="card user-list">
        <div class="card-header">
          <h3>Users List</h3><hr />
        </div>
        <div class="card-body">
          <table class="table table-striped table-borderedã€€table-responsive">
            <thead>
              <tr>
                <th><h6>Image</h6></th>
                <th><h6>Nickname</h6></th>
                <th><h6>Realname</h6></th>
                <th><h6>E-mail</h6></th>
                <th><h6>Admin</h6></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td aria-labe><%= link_to gravatar_for(user) %></td>
                  <td aria-labe><%= user.nickname %></td>
                  <td aria-labe><%= user.realname %></td>
                  <td aria-labe><%= user.email %></td>
                  <td aria-labe>
                    <% if user.admin?%>
                      <%= link_to "Remove as Admin", admin_user_path(id: user), method: :put, class: "btn btn-danger"%>
                    <% else %>
                      <%= link_to "Set as Admin", admin_user_path(id: user), method: :put, class: "btn btn-primary"%>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>